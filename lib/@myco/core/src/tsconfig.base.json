{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["esnext"],
    "strict": true,
    "noEmit": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "paths": {
      "vendor/*": ["../../*"]
    }
  }
}
